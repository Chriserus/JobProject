<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.chriserus.hibernate.ItemEntity" table="Item" schema="restaurant">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
            <generator class="identity" />
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(150)" length="150"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double unsigned" precision="-1"/>
        </property>
        <property name="calories">
            <column name="calories" sql-type="int(10) unsigned"/>
        </property>
        <property name="vegetarian">
            <column name="vegetarian" sql-type="tinyint(1) unsigned"/>
        </property>
    </class>
</hibernate-mapping>